<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Ordenes de Compra</h3>

        <div style="padding: 10px;">
            <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page" href="/ordencompra/add">Nueva Compra</a></button>
        </div>
        {{#if ordencompras}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4">Nombre de Proovedor</th>
                        <th scope="col">Id del Proovedor</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Total</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each ordencompras}}
                        <tr>
                            <td>{{nombre}}</td>
                            <td>{{prov_id}}</td>
                            <td>{{fecha}}</td>
                            <td>{{total}}</td>
                            <td>
                                <div class="">
                                    <a href="/ordencompra/edit/{{orden_id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i>Actualizar</a>

                                    <a href="/ordencompra/delete/{{orden_id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i>Eliminar</a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                </tbody>
            </table>
    </div>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>Debes crear una Orden de Compra</h3>
        </div>
        <div class="card-body">
            <p>Presiona este boton para que puedas registrar una Orden de Compra en la aplicacion</p>
            <a href="/ordencompra/add" class="btn btn-primary">Ir a Crear</a>
        </div>
        {{/if}}
    </div>
</div>