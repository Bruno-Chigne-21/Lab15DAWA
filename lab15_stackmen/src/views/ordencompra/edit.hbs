<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR ORDEN DE COMPRA</h3>
                </div>
                <div class="card-body">
                    <form action="/ordencompra/edit/{{ordencompra.orden_id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="fecha" class="input-group-text">Fecha</label>
                            <input class="form-control" type="date" name="fecha" id="fecha" placeholder="Fecha"
                                value="{{ordencompra.fecha}}" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="total" class="input-group-text">Total</label>
                            <input class="form-control" type="text" name="total" id="total" placeholder="Precio Total"
                                value="{{ordencompra.total}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="proveedor" class="input-group-text">Proveedor</label>
                            <select class="form-select" name="prov_id" id="prov_id" required>
                                {{#each proveedores}}
                                    <option value="{{this.prov_id}}" {{#eq this.prov_id ../ordencompra.prov_id}}selected{{/eq}}>{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar</button>
                            <button class="btn btn-danger"><a class="nav-link link-light" aria-current-"page"
                                    href="/ordencompra/list"> Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
