<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Proovedores</h3>

        <div style="padding: 10px;">
            <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page" href="/proovedores/add">Nuevo Proovedor</a></button>
        </div>
        {{#if proovedores}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4">Nombre</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each proovedores}}
                        <tr>
                            <td>{{nombre}}</td>
                            <td>{{direccion}}</td>
                            <td>{{telefono}}</td>
                            <td>
                                <div class="">
                                    <a href="/proovedores/edit/{{prov_id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i>Actualizar</a>

                                    <a href="/proovedores/delete/{{prov_id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i>Eliminar</a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                </tbody>
            </table>
    </div>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>Debes crear un proovedor</h3>
        </div>
        <div class="card-body">
            <p>Presiona este boton para que puedas registrar a un proovedor en la aplicacion</p>
            <a href="/proovedores/add" class="btn btn-primary">Ir a Crear</a>
        </div>
        {{/if}}
    </div>
</div>