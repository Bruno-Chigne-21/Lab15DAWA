<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR PROOVEDOR</h3>
                </div>
                <div class="card-body">
                    <form action="/proovedores/edit/{{proovedor.prov_id}}" method="POST">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Nombres"
                            value="{{proovedor.nombre}}" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Direccion</label>
                            <input class="form-control" type="text" name="direccion" id="direccion" placeholder="Direccion"
                            value="{{proovedor.direccion}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text">Telefono</label>
                            <input class="form-control" type="text" name="telefono" id="telefono" placeholder="Telefono"
                            value="{{proovedor.telefono}}" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar</button>
                            <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page" href="/proovedores/list">Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
