<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card-header">
                <h3 class="text-uppercase">CREAR PROOVEDOR</h3>
            </div>
            <div class="card-body">
                <form action="/proovedores/add" method="post">
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Nombre del Proovedor" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="lastname" class="input-group-text">Direccion</label>
                        <input class="form-control" type="text" name="direccion" id="direccion" placeholder="Direccion" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="age" class="input-group-text">Telefono</label>
                        <input class="form-control" type="text" name="telefono" id="telefono" placeholder="Telefono" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Guardar</button>
                        <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page" href="/proovedores/list">Cancelar</a></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>